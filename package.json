{
	"name": "desktop-music-player",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"main": "dist-electron/main.js",
	"scripts": {
		"dev": "npm-run-all --parallel dev:react dev:electron",
		"dev:react": "vite",
		"dev:electron": "npm run transpile:electron && cross-env NODE_ENV=development electron .",
		"transpile:electron": "tsc --project ./src/electron/tsconfig.json",
		"build": "tsc -b && vite build",
		"build:electron:mac": "electron-builder --mac --arm64",
		"build:electron:win": "electron-builder --win --x64",
		"build:electron:linux": "electron-builder --linux --x64",
		"dist:mac": "npm run transpile:electron & npm run build & npm run build:electron:mac",
		"dist:win": "npm run transpile:electron & npm run build & npm run build:electron:win",
		"dist:linux": "npm run transpile:electron & npm run build & npm run build:electron:linux",
		"lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
		"preview": "vite preview"
	},
	"dependencies": {
		"@radix-ui/react-slider": "^1.3.5",
		"@reduxjs/toolkit": "^2.8.2",
		"@tailwindcss/vite": "^4.1.7",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"desktop-music-player": "file:",
		"lucide-react": "^0.511.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-icons": "^5.5.0",
		"react-redux": "^9.2.0",
		"react-router-dom": "^7.6.1",
		"tailwind-merge": "^3.3.0",
		"tailwindcss": "^4.1.7"
	},
	"devDependencies": {
		"@types/node": "^22.15.21",
		"@types/react": "^18.3.3",
		"@types/react-dom": "^18.3.0",
		"@typescript-eslint/eslint-plugin": "^7.15.0",
		"@typescript-eslint/parser": "^7.15.0",
		"@vitejs/plugin-react": "^4.3.1",
		"cross-env": "^7.0.3",
		"electron": "^36.1.0",
		"electron-builder": "^26.0.12",
		"eslint": "^8.57.0",
		"eslint-plugin-react-hooks": "^4.6.2",
		"eslint-plugin-react-refresh": "^0.4.7",
		"npm-run-all": "^4.1.5",
		"tw-animate-css": "^1.3.0",
		"typescript": "^5.2.2",
		"vite": "^5.3.4"
	}
}
